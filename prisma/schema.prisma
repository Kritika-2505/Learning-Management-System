datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model user {
    id          Int     @id @default(autoincrement())
    username    String  @unique
    email       String  @unique
    password    String
    token       String
    is_Verified Boolean
    userRole    String
    profile      userProfile?  @relation(fields: [profileId], references: [id])
    profileId    Int
}

model userProfile {
    id            Int       @id @default(autoincrement())
    fullName      String
    age           Int
    gender        String
    profession    String
    universityName String
    contactNumber String
    address       String
    role          String
    user          user      @relation(fields: [userId], references: [id])
    userId        Int
}


model File {
    id               Int       @id @default(autoincrement())
    userId           Int
    filename         String
    createdAt        DateTime  @default(now())
}

